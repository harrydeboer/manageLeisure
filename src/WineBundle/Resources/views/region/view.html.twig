{% extends '@WineBundle/base.html.twig' %}

{% block title %}Region{% endblock %}

{% block body %}
    <h1>Regions</h1>
    <a href="{{ path('wineRegionCreate') }}">Create a region</a>
    <table class="table table-striped">
        {% for region in regions %}
            <tr>
                <td>{{ region.name }}</td>
                <td><a href="{{ path('wineRegionEdit', {'id': region.id}) }}">edit</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
