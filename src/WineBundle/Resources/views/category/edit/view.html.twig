{% extends '@WineBundle/base.html.twig' %}

{% block title %}Edit{% endblock %}

{% block body %}
    {{ include('@Wine/category/form.html.twig', {form: formUpdate}) }}
    <br>
    <div class="modal" id="delete-category-modal">
        <div class="modal-dialog" id="delete-modal-dialog">
            <div class="modal-content">
                <div class="modal-header" id="delete-modal-header">
                    <h3>Are you sure you want to delete this category?</h3>
                    {{ form(formDelete) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <button id="delete-category"
            class="btn btn-danger delete-category">Delete category</button>
{% endblock %}
