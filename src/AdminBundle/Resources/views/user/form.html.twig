{{ form_start(form) }}
<table id="newUserTable">
    <tr><td>{{ form_label(form.name) }}</td><td>{{ form_widget(form.name) }}</td></tr>
    <tr><td>{{ form_label(form.email) }}</td><td>{{ form_widget(form.email) }}</td></tr>
    <tr><td>{{ form_label(form.roles) }}</td><td>{{ form_widget(form.roles) }}</td></tr>
    <tr><td>{{ form_label(form.isVerified) }}</td><td>{{ form_widget(form.isVerified) }}</td></tr>
    <tr><td>{{ form_label(form.plainPassword.children.first) }}</td>
        <td>{{ form_widget(form.plainPassword.children.first) }}</td></tr>
    <tr><td>{{ form_label(form.plainPassword.children.second) }}</td>
        <td>{{ form_widget(form.plainPassword.children.second) }}</td></tr>
    <tr><td colspan="2">{{ form_widget(form.register, { 'label': submitLabel }) }}</td></tr>
</table>
{{ form_end(form) }}
