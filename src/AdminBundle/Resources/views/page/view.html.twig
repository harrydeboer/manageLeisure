{% extends '@AdminBundle/base.html.twig' %}

{% block title %}Mail User{% endblock %}

{% block body %}
    <a href="{{ path('adminPageCreate') }}">Create a page</a>
    <table class="table table-striped" id="pageTable">
        {% for page in pages %}
            <tr>
                <td>{{ page.title }}</td>
                <td><a href="{{ path('adminPageEdit', {'id': page.id}) }}">edit</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
