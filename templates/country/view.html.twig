{% extends 'base.html.twig' %}

{% block title %}Country{% endblock %}

{% block body %}
    <h1>Countries</h1>
    <a href="{{ path('countryCreate') }}">Create a country</a>
    <table class="table table-striped">
        {% for country in countries %}
            <tr>
                <td>{{ country.name }}</td>
                <td>{{ country.code }}</td>
                <td><a href="{{ path('countryEdit', {'id': country.id}) }}">edit</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
