<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Harry de Boer">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}" type="image/x-icon">
    <link rel="stylesheet" href="{{ asset('/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/app.css') }}">
    <link rel="stylesheet" href="{{ asset('/fontawesome/css/fontawesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('/fontawesome/css/brands.min.css') }}">
    <link rel="stylesheet" href="{{ asset('/fontawesome/css/solid.min.css') }}">
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
{% block headerImg %}
    <img src="{{ asset('img/life.jpg') }}" id="lifeImg" alt="life">
{% endblock %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbar-supported-content" aria-controls="navbar-supported-content" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-supported-content">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li><a href="{{ path('homepage') }}">Home</a></li>
                <li><a href="{{ path('app_login') }}"><i class="fas fa-user"></i></a></li>
                <li><a href="{{ path('contact') }}">Contact</a></li>
                {% if token.token is not null and 'ROLE_ADMIN' in token.token.user.roles  %}
                    <li><a href="{{ path('mailUser') }}">Mail Users</a></li>
                {% endif %}
                <li><a href="{{ path('wineHomepage') }}">Wines</a></li>
                <li><a href="{{ path('movieHomepage') }}">Movies</a></li>
            </ul>
            <div id="navigation-border"></div>
            {% block navlist %}{% endblock %}
        </div>
    </div>
</nav>
{% block body %}{% endblock %}
{% if reCaptchaKey is defined %}
    <script src="https://www.google.com/recaptcha/api.js?render={{ reCaptchaKey }}"></script>
    <div id="reCaptchaKey" data-key="{{ reCaptchaKey }}"></div>
{% endif %}
<script src="{{ asset('/js/jquery.min.js') }}"></script>
<script src="{{ asset('/js/bootstrap.bundle.min.js') }}"></script>
<script src="{{ asset('/js/app.min.js') }}"></script>
{% block javascripts %}
{% endblock %}
</body>
</html>
