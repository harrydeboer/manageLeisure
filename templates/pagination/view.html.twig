{% if paginator.hasToPaginate %}
    <div class="navigation">
        <ul class="pagination">
            {% if paginator.hasPreviousPage %}
                <li class="prev"><a href="{{ path('wine_index_paginated', {page: paginator.previousPage}) }}"
                                    rel="previous"><i class="fa fw fa-arrow-left"></i></a></li>
            {% else %}
                <li class="prev disabled"><span><i class="fa fw fa-arrow-left"></i></span></li>
            {% endif %}

            {% for i in 1..paginator.lastPage %}
                {% if i == paginator.currentPage %}
                    <li class="active">
                        <span>{{ i }} <span class="sr-only">{{ 'paginator.current' }}</span></span>
                    </li>
                {% else %}
                    <li><a href="{{ path('wine_index_paginated', {page: i}) }}">{{ i }}</a></li>
                {% endif %}
            {% endfor %}

            {% if paginator.hasNextPage %}
                <li class="next"><a href="{{ path('wine_index_paginated', {page: paginator.nextPage}) }}"
                                    rel="next"><i class="fa fw fa-arrow-right"></i></a></li>
            {% else %}
                <li class="next disabled"><span><i class="fa fw fa-arrow-right"></i></span></li>
            {% endif %}
        </ul>
    </div>
{% endif %}
