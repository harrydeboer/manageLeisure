{{ form_start(form) }}
<table>
    <tr><td>{{ form_label(form.domain) }}</td><td>{{ form_widget(form.domain) }}</td></tr>
    {% if submitLabel == 'Create' %}
        <tr><td>{{ form_label(form.password) }}</td><td>{{ form_widget(form.password) }}</td></tr>
    {% else %}
        <tr><td>{{ form_label(form.newPassword) }}</td><td>{{ form_widget(form.newPassword) }}</td></tr>
    {% endif %}
    <tr><td>{{ form_label(form.email) }}</td><td>{{ form_widget(form.email) }}</td></tr>
    <tr><td>{{ form_label(form.forward) }}</td><td>{{ form_widget(form.forward) }}</td></tr>
    <tr><td colspan="2">{{ form_widget(form.submit, { 'label': submitLabel }) }}</td></tr>
</table>
{{ form_end(form) }}
